<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- 버스 번호 배지 -->
    <LinearLayout
        android:id="@+id/bus_badge_layout_tab3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bus_num_badge_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/BusNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- 노선 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="4dp">

        <TextView
            android:id="@+id/Busstation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="노선명"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#212121"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/BusTime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="운행 시간"
            android:textSize="11sp"
            android:textColor="#757575"
            android:paddingTop="2dp" />

        <!-- 첫차/막차 정보 추가 -->
        <TextView
            android:id="@+id/BusFirstLastTime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="첫차: 00:00 | 막차: 00:00"
            android:textSize="10sp"
            android:textColor="#1565C0"
            android:paddingTop="1dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
