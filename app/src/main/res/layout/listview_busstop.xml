<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/busstop_item_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_busstop_item"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <!-- 버스 번호 배지 -->
    <LinearLayout
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/bus_num_badge_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/BusNum_fromStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/busstop_bus_num_default"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- 노선 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="4dp">

        <!-- 시작 → 끝 노선 정보 (아이콘 포함) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_route_line_badge"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/BusLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/busstop_route_name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#0D47A1"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <TextView
            android:id="@+id/BusTime_Num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/busstop_arrive_time"
            android:textSize="13sp"
            android:textColor="#1565C0"
            android:textStyle="bold"
            android:paddingTop="3dp" />

        <TextView
            android:id="@+id/Position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/busstop_current_pos"
            android:textSize="11sp"
            android:textColor="#546E7A"
            android:paddingTop="2dp" />
    </LinearLayout>

    <!-- 우측: 버스 도착 아이콘 -->
    <LinearLayout
        android:id="@+id/bus_arriving_icon_layout"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/bus_arriving_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_bus_here"
            android:contentDescription="버스 도착"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/bus_arriving_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="곧 도착"
            android:textSize="8sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>
