<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fitsSystemWindows="true">

    <!-- 메인 콘텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 정류소 이름 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <!-- 버스 정류소 아이콘 배지 -->
                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/stop_icon_badge_bg"
                    android:gravity="center"
                    android:layout_marginEnd="14dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_bus_stop"
                        android:contentDescription="@string/busstop_icon_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/busstop_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="#1976D2"
                        android:letterSpacing="0.12"
                        android:textAllCaps="false" />

                    <TextView
                        android:id="@+id/BusStopName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/busstop_default_name"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:letterSpacing="-0.01"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:background="#BBDEFB"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 버스 목록 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <ListView
                android:id="@+id/BusRunFromStop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#EEEEEE"
                android:dividerHeight="1dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </androidx.cardview.widget.CardView>

        <!-- GPS 위치 찾기 버튼 -->
        <Button
            android:id="@+id/busgps"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="@string/busstop_gps_btn"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:drawableStart="@drawable/ic_location_pin"
            android:drawablePadding="18dp"
            android:drawableTint="#FFFFFF"
            android:background="@drawable/btn_gps_background_green"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:elevation="6dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

    <!-- 새로고침 FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bus_stop_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/refresh_icon"
        android:contentDescription="@string/busstop_refresh"
        app:backgroundTint="#FF5722"
        app:tint="#FFFFFF"
        app:fabSize="normal"
        app:elevation="8dp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/Busstop_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
